<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consular Services</title>
    <style>
        body { font-family: Helvetica, Arial, sans-serif; margin: 0; }
        .main-container { max-width: 1100px; margin: 0 auto; padding: 20px; }
        header { 
            background-color: #f2f2f2; 
            padding: 1rem 2rem; 
            border-bottom: 1px solid #ddd; 
            margin-bottom: 2rem; 
        }
        header h1 { margin: 0; font-size: 1.5rem; }
        footer { 
            border-top: 1px solid #ddd; 
            margin-top: 2rem; 
            padding-top: 1rem; 
            font-size: 0.9rem;
            color: #666;
        }
    </style>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- SurveyJS Core -->
    <link href="https://unpkg.com/survey-core@2.2.5/survey-core.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/survey-core/themes/plain.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://unpkg.com/survey-core/survey.core.min.js"></script>
    <script type="text/javascript" src="https://unpkg.com/survey-js-ui/survey-js-ui.min.js"></script>
    <script type="text/javascript" src="https://app.unpkg.com/survey-core@2.2.5/files/themes/plain-light.js"></script>
    <script type="text/javascript" src="/css/theme.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>

</head>
<body>
<header>
    <h1>Consular Services Portal</h1>
</header>

<div class="main-container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="main-container">
    &copy; 2024 - FrameworkQ Consular Services
</footer>
</body>
</html>